<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Admin Page - Produk & Stock</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
  <div class="container mt-4">
    <h1 class="mb-4">Daftar Produk & Stock</h1>
    <a href="/purchase" class="btn btn-primary mb-3">Input Pembelian</a>
    <a href="/purchases" class="btn btn-secondary mb-3 ms-2">Lihat Pembelian</a>
    <a href="/product/add" class="btn btn-success mb-3 ms-2">Tambah Produk</a>
    <a href="/stock/add" class="btn btn-warning mb-3 ms-2">Tambah Stock</a>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Produk</th>
          <th>Harga</th>
          <th>Stock</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach(product => { %>
          <tr>
            <td><%= product.name %></td>
            <td>Rp <%= product.price.toLocaleString() %></td>
            <td><%= product.quantity !== null ? product.quantity : 0 %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
