<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Admin Page - Produk & Stock</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body, html {
      height: 100%;
      margin: 0;
    }
    .sidebar {
      height: 100vh;
      background-color: #343a40;
      padding: 1rem;
      display: flex;
      flex-direction: column;
    }
    .sidebar .btn {
      margin-bottom: 1rem;
      width: 100%;
    }
    .sidebar .btn:last-child {
      margin-bottom: 0;
    }
    .sidebar .btn-primary {
      background-color: #007bff;
      border-color: #007bff;
    }
    .sidebar .btn-primary:hover {
      background-color: #0056b3;
      border-color: #004085;
    }
    .content {
      padding: 1rem 2rem;
      flex-grow: 1;
    }
    .container-flex {
      display: flex;
      height: 100vh;
    }
  </style>
</head>
<body>
  <div class="container-flex">
    <div class="sidebar">
      <a href="/products" class="btn btn-primary">Kelola Produk</a>
      <a href="/stock/add" class="btn btn-primary ms-0">Tambah Stock</a>
      <a href="/purchase" class="btn btn-primary">Input Pembelian</a>
      <a href="/purchases" class="btn btn-primary ms-0">Lihat Pembelian</a>
    </div>
    <div class="content">
      <h1 class="mb-4">Daftar Produk & Stock</h1>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Produk</th>
            <th>Harga</th>
            <th>Stock</th>
          </tr>
        </thead>
        <tbody>
          <% products.forEach(product => { %>
            <tr>
              <td><%= product.name %></td>
              <td>Rp <%= product.price.toLocaleString() %></td>
              <td><%= product.quantity !== null ? product.quantity : 0 %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
