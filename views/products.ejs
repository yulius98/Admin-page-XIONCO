<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Kelola Produk</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
  <div class="container mt-4">
    <h1 class="mb-4">Kelola Produk</h1>
    <a href="/products/add" class="btn btn-success mb-3">Tambah Produk</a>
    <a href="/" class="btn btn-secondary mb-3 ms-2">Kembali ke Beranda</a>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Produk</th>
          <th>Harga</th>
          <th>Stock</th>
          <th>Aksi</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach(product => { %>
          <tr>
            <td><%= product.name %></td>
            <td>Rp <%= product.price.toLocaleString() %></td>
            <td><%= product.quantity !== null ? product.quantity : 0 %></td>
            <td>
              <a href="/products/edit/<%= product.id %>" class="btn btn-primary btn-sm">Edit</a>
              <form action="/products/delete/<%= product.id %>" method="POST" style="display:inline;" onsubmit="return confirm('Yakin ingin menghapus produk ini?');">
                <button type="submit" class="btn btn-danger btn-sm">Hapus</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
